<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        app:cardCornerRadius="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <ImageView
                    android:id="@+id/profilePic"
                    android:layout_width="150dp"
                    android:layout_height="310dp"
                    android:padding="2dp" />

                <EditText
                    android:id="@+id/tvProductnameEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/profilePic"
                    android:text="Name: "
                    android:textColor="#000"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/tvPriceEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvProductnameEdit"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/profilePic"
                    android:layout_toRightOf="@+id/profilePic"
                    android:text="Price: "
                    android:textColor="#000"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/tvDescriptionEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPriceEdit"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/profilePic"
                    android:layout_toRightOf="@+id/profilePic"
                    android:text="Details: "
                    android:textColor="#000"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/tvProducttypeEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDescriptionEdit"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/profilePic"
                    android:layout_toRightOf="@+id/profilePic"
                    android:text="Type: "
                    android:textColor="#000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvProductname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvProducttypeEdit"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/profilePic"
                    android:layout_toRightOf="@+id/profilePic"
                    android:text="Name: "
                    android:textColor="#000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvProductname"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/profilePic"
                    android:layout_toRightOf="@+id/profilePic"
                    android:text="Price: "
                    android:textColor="#000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/rsPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPrice"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/profilePic"
                    android:layout_toRightOf="@+id/profilePic"
                    android:text="Rs: "
                    android:textColor="#000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rsPrice"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/profilePic"
                    android:layout_toRightOf="@+id/profilePic"
                    android:text="Details: "
                    android:textColor="#000"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/tvProducttype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDescription"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/profilePic"
                    android:layout_toRightOf="@+id/profilePic"
                    android:text="Type: "
                    android:textColor="#000"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imgDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvProducttype"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/profilePic"
                    android:layout_toRightOf="@+id/profilePic"
                    android:text="Type: "
                    android:textColor="#000"
                    android:textSize="15sp" />


            </RelativeLayout>

            <ImageView
                android:id="@+id/imgDeletes"
                android:layout_width="40dp"
                android:layout_height="26dp"
                android:layout_marginTop="334dp"
                android:layout_marginEnd="48dp"
                android:layout_marginRight="48dp"
                android:src="@drawable/delete"
                app:layout_constraintEnd_toStartOf="@+id/imgUpdate"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/likeProduct"
                android:layout_width="40dp"
                android:layout_height="26dp"
                android:layout_marginTop="334dp"
                android:layout_marginEnd="28dp"
                android:layout_marginRight="28dp"
                android:src="@drawable/like_logo"
                app:layout_constraintEnd_toStartOf="@+id/imgDeletes"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/addCart"
                android:layout_width="40dp"
                android:layout_height="26dp"
                android:layout_marginTop="334dp"
                android:layout_marginEnd="28dp"
                android:layout_marginRight="28dp"
                android:src="@drawable/cart"
                app:layout_constraintEnd_toStartOf="@+id/likeProduct"
                app:layout_constraintTop_toTopOf="parent" />



            <ImageButton
                android:id="@+id/imgUpdate"
                android:layout_width="40dp"
                android:layout_height="26dp"
                android:layout_marginTop="334dp"
                android:layout_marginEnd="60dp"
                android:layout_marginRight="60dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/ic_menu_edit" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>